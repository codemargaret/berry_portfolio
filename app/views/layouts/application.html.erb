<!DOCTYPE html>
<html>
  <head>
    <title>M. Berry Portfolio</title>
    <link rel="icon" href ="http://images.clipartpanda.com/white-music-note-png-ncEEM5jcA.png">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
      <ul><%= link_to('Margaret Berry', root_path) %></ul>
      <% if current_user %>
        <ul><%= link_to('Edit User', edit_user_registration_path) %></ul>
      <% end %>
      <ul><%= link_to('Projects', projects_path) %></ul>
      <ul><%= link_to('Skills', skills_path) %></ul>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
        </ul>
        <% if current_user %>
          <ul><%= link_to('Logout', destroy_user_session_path, method: :delete) %></ul>
        <% else %>
          <ul><%= link_to('Login', new_user_session_path) %></ul>
          <ul><%= link_to('Register', new_user_registration_path) %></ul>
        <% end %>
      </div>
    </nav>
  </header>

  <body>
    <div class='container'>
      <% flash.each do |key, value| %>
         <div class='alert alert-info alert-dismissible fade show' role='alert'>
           <button type="button" class="close" data-dismiss="alert" aria-label="Close">
             <span aria-hidden="true">&times;</span>
           </button>
           <%= value %>
         </div>
       <% end %>
      <%= yield %>
    </div>
    <nav id='footer' class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
      <ul>Contact Margaret:</ul>
      <ul><a href="mailto:codeberry1@gmail.com" target="_top">Email</a></ul>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
        </ul>
      </div>
    </nav>
  </body>
</html>
